        <section id="forms">
          <h2>Forms & Interactive Controls</h2>
          <form action="#" method="post">
            <fieldset>
              <legend>Contact</legend>
              <label for="name">Name:</label><br>
              <input type="text" id="name" name="name" placeholder="Your name" required><br>

              <label for="email">Email:</label><br>
              <input type="email" id="email" name="email" placeholder="you@example.com"><br>

              <label>Choose a plan:</label>
              <div>
                <input type="radio" id="free" name="plan" value="free" checked><label for="free">Free</label>
                <input type="radio" id="pro" name="plan" value="pro"><label for="pro">Pro</label>
              </div>

              <label for="interests">Interests (multiple):</label><br>
              <select id="interests" name="interests" multiple size="3">
                <option>Design</option>
                <option selected>Development</option>
                <option>Marketing</option>
              </select>

              <fieldset>
                <legend>Preferences</legend>
                <input type="checkbox" id="news" name="news" checked><label for="news">Newsletter</label>
                <input type="checkbox" id="updates" name="updates"><label for="updates">Product updates</label>
              </fieldset>

              <label for="bio">Short bio</label><br>
              <textarea id="bio" name="bio" rows="4" cols="40" placeholder="Tell us about yourself"></textarea>

              <label for="birthday">Birthday:</label>
              <input type="date" id="birthday" name="birthday">

              <label for="quantity">Quantity (1-10):</label>
              <input type="range" id="quantity" name="quantity" min="1" max="10" value="3">

              <div class="controls">
                <button type="submit">Submit</button>
                <button type="reset">Reset</button>
                <input type="hidden" name="token" value="abc123">
              </div>
            </fieldset>
          </form>

          <details>
            <summary>More form fields</summary>
            <p>File upload (note: server required to handle):</p>
            <input type="file" name="file">
            <p>Number input:</p>
            <input type="number" name="age" min="0" max="120">
          </details>
        </section>

